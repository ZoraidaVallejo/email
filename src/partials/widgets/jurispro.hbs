{{!
 * @param {Object}   jurispro
 * @param {string}   jurispro.widget.header
 * @param {string}   jurispro.widget.icon
 * @param {string}   jurispro.description
 * @param {Object[]} jurispro.cases
}}

{{#table class="widget w-jurispro set-max-width"}}
  {{>widget-header
    header=jurispro.widget.header
    icon=jurispro.widget.icon
  }}

  <tr>
    <td class="custom-description" responsive="mobile-padding-horizontal-sides">
      {{#table}}
        <tr>
          <td class="text" responsive="mobile-no-padding-horizontal-sides">
            <p>{{{jurispro.description}}}</p>
          </td>
          <td class="thumb" responsive="mobile-hide">
            <a href="https://www.jurispro.com/" target="_blank">
              {{>img
                src="https://justatic.com/v/1/emails/images/newsletters/common/jurispro-01.png"
                alt=jurispro.widget.header
              }}
            </a>
          </td>
        </tr>
      {{/table}}
    </td>
  </tr>

  {{>widget-columns-articles widgetConfig=jurispro.cases}}

  <tr>
    <td class="custom-description -last" responsive="mobile-padding-horizontal-sides">
      <p>
        Learn how to research experts here: <b><a href="https://www.jurispro.com/ExpertWitnessWhitePaper" target="_blank">JurisPro Expert Witness White Paper</a></b>
      </p>
    </td>
  </tr>
{{/table}}
